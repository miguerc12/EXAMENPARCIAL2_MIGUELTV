<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_2"
        android:scaleType="centerCrop"
        android:contentDescription="Fondo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="#80FFFFFF">

            <TextView
                android:id="@+id/welcomeMessagee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, de acuerdo a tu edad las categorías disponibles son:"
                android:textSize="18sp"
                android:textColor="#333333"
                android:padding="16dp"
                android:background="@drawable/text_background"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnregreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="Ir al inicio"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caricatura"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/categoryImage1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Category 1"
                android:background="@drawable/image_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/categoryImage2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Category 2"
                android:visibility="gone"
                android:background="@drawable/image_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terror"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/categoryImage3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Category 3"
                android:visibility="gone"
                android:background="@drawable/image_background"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
